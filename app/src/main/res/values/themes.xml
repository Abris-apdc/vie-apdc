<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bruh" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorAccent">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorError">@color/teal_200</item>
        <item name="colorBackgroundFloating">@color/teal_700</item>
        <item name="colorSwitchThumbNormal">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Bruh.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Bruh.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Bruh.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>